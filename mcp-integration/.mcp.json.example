{
  "mcpServers": {
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ],
      "env": {}
    },
    "knowledge-graph": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "mcp-knowledge-graph",
        "--memory-path",
        "./config/credentials/knowledge_graph_memory.jsonl"
      ],
      "env": {}
    },
    "memory-bank": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@movibe/memory-bank-mcp"
      ],
      "env": {
        "MEMORY_BANK_PATH": "/workspaces/hackathon_demo/mcp-integration/config/credentials/memory_bank"
      }
    },
    "perplexity-ask": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "server-perplexity-ask"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "YOUR_PERPLEXITY_API_KEY_HERE"
      }
    }
  }
}
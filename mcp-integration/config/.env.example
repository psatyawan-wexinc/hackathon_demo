# MCP Server Credentials Template
# Copy this file to .env and fill in your actual credentials

# Perplexity Ask MCP Server
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Optional: GitHub credentials for enhanced Playwright features
GITHUB_TOKEN=your_github_token_here

# Knowledge Graph MCP - Local storage paths
KNOWLEDGE_GRAPH_MEMORY_PATH=./config/credentials/knowledge_graph_memory.jsonl

# Memory Bank MCP - Local storage paths  
MEMORY_BANK_PATH=./config/credentials/memory_bank

# Optional: Custom MCP server endpoints for streamable HTTP
CUSTOM_MCP_ENDPOINT=https://your-custom-mcp-server.com/mcp

# Claude Code MCP Configuration
MCP_TIMEOUT=30000
MCP_AUTO_APPROVE=true

# Security settings
ENCRYPT_CREDENTIALS=false
CREDENTIAL_ENCRYPTION_KEY=your_encryption_key_here
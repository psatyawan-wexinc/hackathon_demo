# ===========================================
# HACKATHON DEMO - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control

# ===========================================
# MCP SERVER CREDENTIALS
# ===========================================

# Perplexity Ask MCP Server
# Get your API key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Optional: GitHub credentials for enhanced features
# Create token at: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# ===========================================
# MCP STORAGE PATHS
# ===========================================

# Knowledge Graph MCP - Local storage for persistent memory
KNOWLEDGE_GRAPH_MEMORY_PATH=./data/knowledge_graph_memory.jsonl

# Memory Bank MCP - Local storage for cross-session context  
MEMORY_BANK_PATH=./data/memory_bank

# ===========================================
# MCP SERVER CONFIGURATION
# ===========================================

# MCP server timeout in milliseconds
MCP_TIMEOUT=30000

# Auto-approve MCP operations (true/false)
MCP_AUTO_APPROVE=true

# Optional: Custom MCP server endpoints for HTTP transport
CUSTOM_MCP_ENDPOINT=https://your-custom-mcp-server.com/mcp

# ===========================================
# SECURITY SETTINGS
# ===========================================

# Enable credential encryption (true/false)
ENCRYPT_CREDENTIALS=false

# Encryption key for storing credentials (if encryption enabled)
CREDENTIAL_ENCRYPTION_KEY=your_encryption_key_here

# JWT secret key for authentication (generate a strong random string)
JWT_SECRET_KEY=your_jwt_secret_key_here

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Database connection settings
DATABASE_URL=sqlite:///./data/app.db
DATABASE_USER=app_user
DATABASE_PASSWORD=your_database_password
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=hackathon_demo

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Application environment (development/staging/production)
APP_ENV=development

# Debug mode (true/false)
DEBUG=true

# API base URL
API_BASE_URL=http://localhost:8000

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# ===========================================
# CLOUD PROVIDER CREDENTIALS (Optional)
# ===========================================

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Azure Configuration
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================

# Python virtual environment path
VENV_PATH=./venv_linux

# Node.js package manager
PACKAGE_MANAGER=npm

# ===========================================
# LOGGING & MONITORING
# ===========================================

# Log level (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/app.log

# Enable performance monitoring
ENABLE_MONITORING=false

# ===========================================
# SETUP VALIDATION
# ===========================================
# These variables help validate that setup is complete
SETUP_COMPLETE=false
CONFIG_VERSION=1.0.0